<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminCategoryActivity">

    <TextView
        android:id="@+id/add_product_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="اضافه کردن محصول"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/product_category_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_product_txt"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/law"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:src="@drawable/hammer"/>
        <ImageView
            android:id="@+id/medical"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:src="@drawable/medicine"/>
        <ImageView
            android:id="@+id/psychology"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:src="@drawable/emotions"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/product_category_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_category_layout1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/art"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:src="@drawable/paint"/>
        <ImageView
            android:id="@+id/engineering"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:src="@drawable/engineering"/>
        <ImageView
            android:id="@+id/language"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:src="@drawable/translating"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_admin_check_orders"
        android:textColor="@color/white"
        android:background="@drawable/buttons"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:text="سفارشات جدید"
        android:layout_above="@+id/btn_admin_maintain_products"
        android:textSize="18sp"
        />
    <Button
        android:id="@+id/btn_admin_maintain_products"
        android:textColor="@color/white"
        android:background="@drawable/buttons"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:text="اصلاح محصولات"
        android:layout_above="@+id/btn_admin_logout"
        android:textSize="18sp"
        />
    <Button
        android:id="@+id/btn_admin_logout"
        android:textColor="@color/white"
        android:background="@drawable/buttons"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:text="خروج"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        />


</RelativeLayout>