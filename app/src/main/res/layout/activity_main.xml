<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buyers.MainActivity"
    android:background="@drawable/welcome">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:id="@+id/applogo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/applogo"/>
    <TextView
        android:id="@+id/app_slogan"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="88dp"
        android:layout_marginTop="150dp"
        android:text="پیدا کن، انتخاب کن و هر کتابی که دنبالشی رو بخر!"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/main_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="15dp"
        android:textSize="18sp"
        android:text="حساب کاربری دارید؟ وارد شوید"
        android:textColor="@color/white"
        android:layout_above="@+id/txt_im_seller"
/>
    <Button
        android:id="@+id/main_join_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/main_login_btn"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:textSize="18sp"
        android:text="عضویت در کتاب جویان"
        android:textColor="@color/colorPrimaryDark"
        />
    <TextView
        android:id="@+id/txt_im_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="من فروشنده هستم"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:textDirection="ltr"
        android:textColor="@color/white"/>
</RelativeLayout>